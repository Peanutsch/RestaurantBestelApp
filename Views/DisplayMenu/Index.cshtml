@{
    ViewData["Title"] = "Display Menu";
}

    <h1>Naam: @ViewData["Customer"]</h1>
    <p>Tafel: @ViewData["TableNumber"]<br />
       Medewerker: @ViewData["Employee"]</p>

<a asp-controller="OrderHistory" asp-action="Index" class="btn btn-danger" id="OrderHistory">Totaal Bestellingen</a>

<form method="post">
    <div class="mt-4">
        <input type="text" id="searchInput" onkeyup="menuFilter()" placeholder="Zoeken...">

        <div class="table-cell">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th id="dish">Gerecht</th>
                        <th>Type</th>
                        <th>Extra Info</th>
                        <th id="price">Prijs</th>
                        <th id="quantity">Aantal</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                    <!-- Load menu from loadMenuTable.js -->
                </tbody>

                <tfoot>
                    <tr>
                        <td colspan="4"></td>
                        <td>
                            <button type="button"
                                    class="btn btn-success"
                                    id="Bestel"
                                    data-order="dish, price, quantity">
                                Bestel!
                            </button>
                        </td>
                    </tr>
                </tfoot>

            </table>
        </div>
    </div>

    <h1></h1>

</form>

<script src="~/js/menuFilter.js"></script>
<script src="~/js/loadMenuTable.js"></script>
<script src="~/js/saveOrderHandler.js"></script>